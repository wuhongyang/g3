<script type="text/javascript">
function openlogin(type){
    var childWindow;
    childWindow = window.open("http://openlogin.vvku.com/passport/openlogin/"+type+"/login.php?back=<?php echo $_SERVER['HTTP_HOST'] ?>&redirect=/","OpenLogin","width=450,height=320,menubar=0,scrollbars=1, resizable=1,status=1,titlebar=0,toolbar=0,location=1");
}

$(function(){
	$('#regForm').validation();

    //发送验证码
	var _get_code = function(){
		var phone = $('#phone').val();
		if(phone == '' || !/^(13|14|15|18)\d{9}$/.test(phone)){
            alert('请输入正确的手机号码');
			return false;
		}
        $(this).unbind('click');
        $(this).attr('disabled','disabled');
        $.ajax({
            url: '/passport/?user_phone&sendcode',
            type: 'POST',
            data: {nouser:phone},
            dataType: 'JSON',
            success: function(data){
                if(data.Flag != 100){
                    getCodeFail(data)
                }else{
                    getCodeSuccess(data);
                }
            }
        });
	}

	//发送失败
	var getCodeFail = function(data){
		$('#get_code').bind('click',_get_code);
		$('#get_code').attr('disabled',false);
		//$('#phone_tip').html(data.FlagString);
        alert(data.FlagString);
	}

	//发送成功
	var getCodeSuccess = function(data){
		$('#get_code').html('短信已发送，<span id="sec">60</span>秒后可点此重发');
        var hideObj = $('input[name="uniqueid"]');
        if(hideObj.length > 0){
            hideObj.remove();
        }
        var hidden = '<input type="hidden" name="uniqueid" value="' + data.UniqueId + '">';
        $('#regForm').append(hidden);
		var sec = 60;
		var si = setInterval(function(){
			--sec;
			if(sec == 0){
				clearInterval(si);
                $('#get_code').html('点此重发校验码');
				$('#get_code').bind('click',_get_code);
				$('#get_code').attr('disabled',false);
			}
			$('#sec').html(sec);
		},1000);
	}

	$('#get_code').bind('click',_get_code);

    $(document).on('click', '#sign_in_now', function(){
        var username = $('input[name="username"]').val();
        location.href = '/passport/?account&login&username='+username;
    });

});
</script>

