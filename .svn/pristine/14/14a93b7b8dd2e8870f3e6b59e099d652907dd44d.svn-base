<div class="slides">
    <div class="slides_container">
        <div id="focus">
		    {foreach $advCycle $img}
            <a style="position: absolute; left: 0px;" class="imgbox" href="{$img['url']}" target="_blank">
                <img src="{$img['src']}" alt="{$img['title']}" width="540" height="238" >
                <p>{$img['title']}</p>
                <span class="shadow"></span>
            </a>
			{/foreach}
        </div>
        <div id="ctr">
		    {foreach $advCycle $img}
            <span class=""><em></em></span> 
			{/foreach}
        </div>
    </div>
</div>
